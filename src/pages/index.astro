---
import Layout from '../layouts/Layout.astro';
---

<Layout title="[cleantimer]">
	<main>
		<form action="/countdown" method="get">
			<input name="t" type="text" autocapitalize="off">
			<button>Start</button>
		</form>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
